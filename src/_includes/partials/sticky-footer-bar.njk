<div class="sticky">
  <div class="wrapper">
    <div class="footer-bar shadow-md padding-m center-cross space-around">
      <nav class="cluster" aria-label="{{ meta.navigation.ariaPlatforms }}">
          {% for key, value in personal.platforms.stickyBar %}
            {% if value != "" %}
              <a class="no-indicator" target="_blank" data-icon href="{{ value }}">
                <span class="visually-hidden">{{ key | capitalize }}</span>
                {% svg 'platform/' + key %}
              </a>
            {% endif %}
          {% endfor %}
      </nav>
    </div>
  </div>
</div